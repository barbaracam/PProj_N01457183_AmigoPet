                @Html.EditorFor(model => model.Pet.PetTip, new { htmlAttributes = new { @class = "form-control", Name = "PetTip" } })
                @Html.ValidationMessageFor(model => model.Pet.PetTip, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
