                @Html.ValidationMessageFor(model => model.Pet.PetBreed, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pet.PetTip, htmlAttributes: new { @class = "control-label col-md-2" })
