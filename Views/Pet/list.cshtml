@model IEnumerable<amigopet.Models.PetDto>

@{
    ViewBag.Title = "list";
}

<h2>Amigo Pet</h2>
<h4>Pets</h4>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="record-container">
    @foreach (var Pet in Model)
    {
        <div class="record">
            <div class="_record">
                @{
                    //Use server rendering to determine an image
                    string pic = "/Content/Pets/default.jpg";
                    string alt = "No Profile Picture Provided.";
                    if (Pet.PetHasPic)
                    {
                        pic = "/Content/Pets/" + Pet.PetID + "." + Pet.PicExtension;
                        alt = "Profile shot of " + Pet.PetName + " " + Pet.PetName;
                    }
                }
                <nav class="linknav">
                    <span class="editlink">@Html.ActionLink("Edit", "Edit", new { id = Pet.PetID })</span>
                </nav>
                <div class="imagecontainer">
                    <img src="@pic" alt="@alt" />
                </div>
                <div class="recordtitle">
                    @Html.ActionLink(Pet.PetName,
                   "Details",
                   new { id = Pet.PetID })
                </div>


            </div>
        </div>
    }
</div>