@model amigopet.Models.AppointmentDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>DeleteConfirm</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>PetWalker</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.AppointmentTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AppointmentComment)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PetWalkerID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PetID)
        </dd>

    </dl>

    @using (Html.BeginForm("Delete", "Appointment", new { id = Model.AppointmentID }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "List")
        </div>
    }
</div>
