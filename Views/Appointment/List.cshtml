@model IEnumerable<amigopet.Models.AppointmentDto>

@{
    ViewBag.Title = "List";
}

<h2>Amigo Pet</h2>
<h4>Appointments</h4>

<div class="extra">
    @Html.ActionLink("Create New", "Create")
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PetID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PetWalkerID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppointmentTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppointmentComment)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PetID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PetWalkerID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AppointmentTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AppointmentComment)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AppointmentID }) |
            @Html.ActionLink("Details", "Details", new { id=item.AppointmentID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AppointmentID })
        </td>
    </tr>
}

</table>
